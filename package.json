{
  "name": "solar-mining-calculator",
  "version": "1.0.0",
  "description": "A comprehensive planning and projection tool for solar-powered Bitcoin mining operations",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:api\" \"npm run dev:calculations\" \"npm run dev:data\"",
    "dev:client": "vite",
    "dev:api": "wrangler dev --config wrangler.api.toml --port 8787",
    "dev:calculations": "wrangler dev --config wrangler.calculations.toml --port 8788",
    "dev:data": "wrangler dev --config wrangler.data.toml --port 8789",
    "build": "npm run build:client && npm run build:workers",
    "build:client": "vite build",
    "build:workers": "npm run build:api && npm run build:calculations && npm run build:data",
    "build:api": "wrangler deploy --config wrangler.api.toml --dry-run",
    "build:calculations": "wrangler deploy --config wrangler.calculations.toml --dry-run",
    "build:data": "wrangler deploy --config wrangler.data.toml --dry-run",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "test:coverage": "vitest run --coverage --reporter=verbose",
    "test:unit": "vitest run src/**/*.test.ts",
    "test:integration": "vitest run tests/integration/**/*.test.ts",
    "test:smoke": "vitest run tests/smoke/**/*.test.ts",
    "test:smoke:staging": "VITE_API_BASE_URL=https://solar-mining-api-dev.workers.dev npm run test:smoke",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:ci": "eslint src --ext .ts,.tsx --format=junit --output-file=eslint-report.xml",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "wrangler d1 execute solar-mining-db-dev --file=src/server/shared/database/migrations/0001_initial_schema.sql --config wrangler.api.toml",
    "db:migrate:production": "wrangler d1 execute solar-mining-db --file=src/server/shared/database/migrations/0001_initial_schema.sql --config wrangler.api.toml --env production",
    "db:seed": "wrangler d1 execute solar-mining-db-dev --file=src/server/shared/database/migrations/seed.sql --config wrangler.api.toml",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "deploy": "npm run deploy:api && npm run deploy:calculations && npm run deploy:data",
    "deploy:api": "wrangler deploy --config wrangler.api.toml --env production",
    "deploy:calculations": "wrangler deploy --config wrangler.calculations.toml --env production",
    "deploy:data": "wrangler deploy --config wrangler.data.toml --env production",
    "deploy:dev": "npm run deploy:api:dev && npm run deploy:calculations:dev && npm run deploy:data:dev",
    "deploy:api:dev": "wrangler deploy --config wrangler.api.toml --env development",
    "deploy:calculations:dev": "wrangler deploy --config wrangler.calculations.toml --env development",
    "deploy:data:dev": "wrangler deploy --config wrangler.data.toml --env development",
    "pages:deploy": "wrangler pages deploy dist",
    "pages:deploy:staging": "wrangler pages deploy dist --branch develop",
    "pages:deploy:production": "wrangler pages deploy dist --branch main",
    "logs:api": "wrangler tail solar-mining-api",
    "logs:calculations": "wrangler tail solar-mining-calculations",
    "logs:data": "wrangler tail solar-mining-data",
    "prepare": "husky install"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231121.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.2.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.1.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.18.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "bitcoin",
    "mining",
    "solar",
    "renewable-energy",
    "calculator",
    "projection",
    "cloudflare-workers",
    "react",
    "typescript"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/solar-mining-calculator.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/solar-mining-calculator/issues"
  },
  "homepage": "https://github.com/yourusername/solar-mining-calculator#readme"
}
